{
  "name": "remote-mower",
  "version": "0.0.1",
  "private": true,
  "author": "Tarbadev",
  "repository": "https://github.com/tarbadev/remote-mower",
  "description": "Desktop application for Remote Mower using the husqvarna API",
  "license": "ISC",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "electron": "NODE_ENV=dev electron .",
    "electron-build": "yarn build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps",
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.9.0",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "fetch-mock": "^9.3.1",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^10.0.0",
    "node-fetch": "^2.6.0",
    "react-scripts": "3.4.1"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "conditional-expression": "^1.1.2",
    "electron-is-dev": "^1.1.0",
    "prop-types": "latest",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2"
  },
  "jest": {
    "resetMocks": true,
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.tarbadev.remote-mower",
    "mac": {
      "category": "public.app-category.utilities"
    }
  }
}
