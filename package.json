{
  "name": "remote-mower",
  "version": "0.0.1",
  "private": true,
  "author": "Tarbadev",
  "homepage": "https://github.com/tarbadev/remote-mower",
  "description": "Desktop application for Remote Mower using the husqvarna API",
  "main": "main.js",
  "license": "ISC",
  "scripts": {
    "start": "nodemon --watch . --ignore '**/*.spec.js' --exec 'electron .'",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "electron": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.2.0",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "jest": {
    "resetMocks": true,
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1"
    }
  }
}
